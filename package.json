{
    "name": "destinationbg-nuxt",
    "private": true,
    "type": "module",
    "author": "Tom Atanasov (Xen)",
    "version": "1.0.0",
    "scripts": {
        "prepare": "husky install",
        "build": "nuxi build",
        "dev": "nuxi dev",
        "generate": "nuxi generate",
        "preview": "nuxi preview",
        "postinstall": "nuxi prepare",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "lint:eslint": "eslint \"**/*.{js,ts,vue}\"",
        "lint:eslint:fix": "eslint --fix \"**/*.{js,ts,vue}\"",
        "lint:prettier": "prettier --check \"**/*.{js,json,ts,vue,scss}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,json,ts,vue,scss}\"",
        "lint:stylelint": "stylelint \"**/*.{css,scss}\"",
        "lint:stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix"
    },
    "devDependencies": {
        "@mapbox/mapbox-gl-geocoder": "^5.0.1",
        "@nuxt/eslint-config": "^0.1.1",
        "@nuxt/test-utils": "^3.5.1",
        "@nuxt/types": "^2.16.3",
        "@nuxtjs/i18n": "npm:@nuxtjs/i18n-edge",
        "@pinia/nuxt": "^0.4.11",
        "@sidebase/nuxt-auth": "^0.5.0",
        "@types/markdown-it": "^12.2.3",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitest/ui": "^0.31.1",
        "@vueuse/core": "^10.1.2",
        "@vueuse/nuxt": "^10.1.2",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-nuxt": "^4.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "mapbox-gl": "^2.15.0",
        "next-auth": "^4.22.1",
        "nuxt": "^3.5.1",
        "nuxt-gtag": "^0.5.7",
        "nuxt-mapbox": "^1.3.9",
        "nuxt-schema-org": "^2.1.3",
        "pinia": "^2.1.3",
        "postcss": "^8.4.23",
        "prettier": "^2.8.8",
        "sass": "^1.62.1",
        "sass-loader": "^13.3.0",
        "stylelint": "^15.6.2",
        "stylelint-config-recommended": "^12.0.0",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-config-standard-scss": "^9.0.0",
        "stylelint-order": "^6.0.3",
        "typescript": "^5.0.4",
        "vite": "^4.3.9",
        "vitest": "^0.31.1",
        "vue": "^3.3.4",
        "vue-tsc": "^1.6.5"
    },
    "dependencies": {
        "@flaticon/flaticon-uicons": "^2.2.0",
        "vee-validate": "^4.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again"
        }
    },
    "lint-staged": {
        "**/*.test.ts": [
            "npm run test"
        ],
        "**/*.{ts,vue}": [
            "npm run lint:eslint:fix",
            "npm run lint:prettier:fix"
        ],
        "**/*.{css,scss}": [
            "npm run lint:stylelint:fix"
        ]
    }
}
